@model ASONET_EF_CodeFirst.Models.Adresler
@{
    ViewBag.Title = "Duzenle";
}

<h2>Adres Duzenle</h2>

<hr />

@using (Html.BeginForm())
{

    <div class="input-group">
        <span class="input-group-addon" id="txt_adres">Adres </span>
        @Html.TextAreaFor(x => x.AdresTanim, new { @class = "form-control", placeholder = "Adres", aria_describedby = "txt_adres", cols = "30", rows = "10" })

    </div>
    <br>
    <div class="input-group">
        <span class="input-group-addon" id="txt_kisi">Kişi </span>
        @Html.DropDownListFor(x => x.kisi.ID, (List<SelectListItem>)ViewBag.kisiler, new { @class = "form-control", aria_describedby = "txt_adres", cols = "30", rows = "10" })

    </div>
    <br />
    <div class="input-group">
        <input type="submit" value="Kaydet" class="btn btn-success" />
    </div>
    <br>
    <div class="input-group small">

        @if (ViewBag.Result != null)
        {
            <div class="alert alert-@ViewBag.Status small" role="alert">
                @ViewBag.Result
            </div>
        }


    </div>
}