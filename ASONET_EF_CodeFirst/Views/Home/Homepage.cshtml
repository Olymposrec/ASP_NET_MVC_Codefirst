@using ASONET_EF_CodeFirst.ViewModels.Home
@model HomePageVModel
@{
    ViewBag.Title = "Homepage";
}


    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2>Homepage</h2>
                <hr />
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-6">
                <div>
                    @Html.ActionLink("Yeni Kişi", "Yeni", "Kisi", null, new { @class = "btn btn-primary" })
                    <br /><br />


                </div>
                <ul class="list-group">
                    <li class="list-group-item active">KİSİLER</li>
                    @foreach (var kisi in Model.Kisiler)
                    {
                <li class="list-group-item">
                    @Html.ActionLink("Düzenle", "Duzenle", "Kisi", new { kisiid = kisi.ID }, new { @class = "btn btn-warning btn-xs" })
                    @Html.ActionLink("Sil", "Sil", "Kisi", new { kisiid = kisi.ID }, new { @class = "btn btn-danger btn-xs" })
                    <span class="glyphicon glyphicon-user green" aria-hidden="true"></span> @(kisi.Ad +" "+ kisi.Soyad+" "+"("+kisi.Yas+")")
                </li>
                    }
                </ul>
            </div>
            
            <div class="col-md-6">
                <div>
                   
                    @Html.ActionLink("Yeni Adres", "Adres", "Adres", null, new { @class = "btn btn-primary" })
                    <br /><br />
                </div>
                <ul class="list-group">
                    <li class="list-group-item active">ADRESLER</li>
                    @foreach (var adres in Model.Adresler)
                    {
                <li class="list-group-item">
                    @Html.ActionLink("Düzenle", "Duzenle", "Adres", new { adresid = adres.ID }, new { @class = "btn btn-warning btn-xs" })
                    @Html.ActionLink("Sil", "Sil", "Adres", new { adresid = adres.ID }, new { @class = "btn btn-danger btn-xs" })
                    <span class="glyphicon glyphicon-home red" aria-hidden="true"></span> @( adres.AdresTanim+" // "+ adres.kisi.Ad+ " "+adres.kisi.Soyad)
                </li>
                    }
                </ul>
            </div>
        </div>
    </div>


